{
  "name": "wallet.universalprofile.cloud",
  "packageManager": "yarn@3.6.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:*:fix\"",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:{eslint,css,fmt}\"",
    "lint:eslint": "eslint --ext '.js,.vue,.ts' .",
    "lint:eslint:fix": "eslint --ext '.js,.vue,.ts' . --fix",
    "lint:css": "stylelint \"**/*.{scss,css,vue}\"",
    "lint:css:fix": "stylelint \"**/*.{scss,css,vue}\" --fix",
    "lint:fmt": "prettier --check --loglevel=warn .",
    "lint:fmt:fix": "prettier --write .",
    "lint:types": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install",
    "yata-fetch": "dotenv -- yata-fetch --config .yata.json",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "prettier --list-different",
      "eslint"
    ],
    "*.json": "prettier --list-different",
    "*.ya?ml": "prettier --list-different",
    "*.{scss,css,vue}": [
      "prettier --list-different",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.36.2",
    "dotenv-cli": "^7.2.1",
    "npm-run-all": "^4.1.5",
    "yata-fetch": "^2.1.5"
  }
}
