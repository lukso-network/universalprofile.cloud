{
  "name": "wallet.universalprofile.cloud",
  "packageManager": "yarn@3.6.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:*:fix\"",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:{eslint,css,fmt}\"",
    "lint:eslint": "eslint --ext '.js,.vue,.ts' .",
    "lint:eslint:fix": "eslint --ext '.js,.vue,.ts' . --fix",
    "lint:css": "stylelint \"**/*.{scss,css,vue}\"",
    "lint:css:fix": "stylelint \"**/*.{scss,css,vue}\" --fix",
    "lint:fmt": "prettier --check --log-level=warn .",
    "lint:fmt:fix": "prettier --write .",
    "lint:types": "tsc --noEmit --project tsconfig.json",
    "prepare": "husky install",
    "yata-fetch": "dotenv -- yata-fetch --config .yata.json",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "0.2.3",
    "@lukso/web-components": "^1.28.0",
    "@nuxt/devtools": "latest",
    "@nuxtjs/device": "^3.1.0",
    "@nuxtjs/plausible": "^0.2.1",
    "@nuxtjs/tailwindcss": "^6.8.0",
    "@pinia/nuxt": "^0.4.11",
    "@playwright/test": "1.36.2",
    "@types/fs-extra": "11.0.1",
    "@types/node": "^18.17.0",
    "@types/randombytes": "2.0.0",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "buffer": "6.0.3",
    "dotenv-cli": "7.2.1",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-playwright": "0.15.3",
    "eslint-plugin-testing-library": "5.11.0",
    "eslint-plugin-vue": "9.15.1",
    "fs-extra": "11.1.1",
    "https-browserify": "1.0.0",
    "husky": "^8.0.3",
    "lint-staged": "13.2.3",
    "npm-run-all": "4.1.5",
    "nuxt": "^3.6.5",
    "postcss-html": "^1.5.0",
    "prettier": "3.0.0",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "sass": "1.64.1",
    "stream-browserify": "3.0.0",
    "stream-http": "3.2.0",
    "stylelint": "15.10.2",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recommended-vue": "1.5.0",
    "stylelint-config-standard-scss": "10.0.0",
    "stylelint-prettier": "4.0.2",
    "stylelint-scss": "5.0.1",
    "typescript": "5.1.6",
    "util": "0.12.5",
    "yata-fetch": "2.1.5"
  },
  "lint-staged": {
    "*.{ts,js,vue}": [
      "prettier --list-different",
      "eslint"
    ],
    "*.json": "prettier --list-different",
    "*.ya?ml": "prettier --list-different",
    "*.{scss,css,vue}": [
      "prettier --list-different",
      "stylelint"
    ]
  }
}
